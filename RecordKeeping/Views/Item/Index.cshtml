@model IEnumerable<RecordKeeping.Models.Item>

<div class="container p-3">
    <div class=" row p-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a  asp-area="" asp-controller="Item" asp-action="Create" class="btn btn-dark"  >Create New Item</a> 
        </div>

    </div>
    <br />

    @if(Model.Count()>0) { 
    
        <table class="table table-bordered table-striped" style="width:100%" >
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                    <th>Changes</th>
                </tr>

            </thead>
            <tbody>

                @foreach(var item in Model)
                {
                <tr>
                    <td width="30%">@item.ItemName</td>
                    <td width="30%">@item.Borrower</td>
                    <td width="30%">@item.Lender</td>
                    <td class="w-100 btn-group" role="group">

                        <a asp-area="" asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">EDIT</a>
                        <a asp-area="" asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">DELETE</a>

                </tr>
                }

            </tbody>

        </table>
    
    }
    else
            {
                <p>No Items Created!!</p>
            }


</div>